{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "NODE_ENV": {
      "type": "string",
      "enum": ["development", "production", "test"],
      "default": "development",
      "description": "Application environment"
    },
    "PORT": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "default": 3000,
      "description": "Server port number"
    },
    "DATABASE_URL": {
      "type": "string",
      "format": "uri",
      "description": "Database connection URL (e.g., postgresql://user:pass@localhost:5432/db)"
    },
    "API_KEY": {
      "type": "string",
      "minLength": 32,
      "pattern": "^[A-Za-z0-9_-]+$",
      "description": "API key for external service authentication"
    },
    "DEBUG": {
      "type": "boolean",
      "default": false,
      "description": "Enable debug mode for detailed logging"
    },
    "MAX_CONNECTIONS": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 100,
      "description": "Maximum number of database connections"
    },
    "JWT_SECRET": {
      "type": "string",
      "minLength": 64,
      "description": "Secret key for JWT token signing"
    },
    "REDIS_URL": {
      "type": "string",
      "format": "uri",
      "description": "Redis connection URL for caching"
    },
    "LOG_LEVEL": {
      "type": "string",
      "enum": ["error", "warn", "info", "debug"],
      "default": "info",
      "description": "Application logging level"
    },
    "RATE_LIMIT": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10000,
      "default": 1000,
      "description": "API rate limit per hour"
    }
  },
  "required": [
    "DATABASE_URL",
    "API_KEY",
    "JWT_SECRET"
  ],
  "additionalProperties": false
}
